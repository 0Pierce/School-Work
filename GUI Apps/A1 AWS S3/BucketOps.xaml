<Window x:Class="A1_AWS_S3.BucketOps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A1_AWS_S3"
        mc:Ignorable="d"
        Title="BucketOps" Height="500" Width="800" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="btnBack" Content="Back to Main Window" HorizontalAlignment="Center" Margin="0,420,0,0" VerticalAlignment="Top" Height="33" Width="452" Click="btnBack_Click"/>
        <Label Content="Bucket Name:" HorizontalAlignment="Left" Margin="32,28,0,0" VerticalAlignment="Top" Height="35" Width="125" FontSize="16"/>
        <TextBox x:Name="tbBucketName" HorizontalAlignment="Center" Margin="0,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="452" Height="35" FontSize="16"/>
        <Button x:Name="btnCreateBucket" Content="Create Bucket" HorizontalAlignment="Left" Margin="663,28,0,0" VerticalAlignment="Top" Height="35" Width="110" Click="btnCreateBucket_Click"/>
        <DataGrid x:Name="bucketDataGrid" d:ItemsSource="{d:SampleData ItemCount=2}" Margin="10,128,10,69" FrozenColumnCount="2" ColumnWidth="*"/>
        <Button x:Name="btnDeleteBucket" Content="Delete Bucket" HorizontalAlignment="Left" Margin="663,88,0,0" VerticalAlignment="Top" Height="35" Width="110" Click="btnDeleteBucket_Click"/>

    </Grid>
</Window>
