<Window x:Class="Lab3WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="630">
    <Grid RenderTransformOrigin="0,0">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="183*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>




        <ComboBox x:Name="CBAppetizers" DisplayMemberPath="Name" HorizontalAlignment="Left" Margin="163,88,0,0" VerticalAlignment="Top" Width="120" Height="22" />
        <ComboBox x:Name="CBBeverages" DisplayMemberPath="Name" HorizontalAlignment="Left" Margin="11,88,0,0" VerticalAlignment="Top" Width="120" Height="22"/>
        <ComboBox x:Name="CBMainCourses" DisplayMemberPath="Name" HorizontalAlignment="Left" Margin="316,88,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="CBDessert" DisplayMemberPath="Name" HorizontalAlignment="Left" Margin="470,88,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <Label Content="Beverage" HorizontalAlignment="Left" Margin="11,49,0,0" VerticalAlignment="Top" Height="34" Width="120"/>
        <Label Content="Appetizer" HorizontalAlignment="Left" Margin="163,49,0,0" VerticalAlignment="Top" Height="34" Width="120" RenderTransformOrigin="0.508,0.648"/>
        <Label Content="Main Course" HorizontalAlignment="Left" Margin="316,49,0,0" VerticalAlignment="Top" Height="34" Width="120"/>
        <Label Content="Dessert" HorizontalAlignment="Left" Margin="470,49,0,0" VerticalAlignment="Top" Height="34" Width="120" Grid.ColumnSpan="2"/>
        <Button x:Name="btnAdd" Content="Add Item/s" HorizontalAlignment="Left" Margin="316,193,0,0" VerticalAlignment="Top" Height="39" Width="108" Click="Button_Click_Add"/>
        <Button x:Name="btnClear" Content="Clear Bill" HorizontalAlignment="Left" Margin="166,193,0,0" VerticalAlignment="Top" Height="39" Width="108" Click="Button_Click_Clear" Background="Azure"/>
        <DataGrid x:Name="dataGridBill" AutoGenerateColumns="False" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="39,246,19,0" CellEditEnding="DataGrid_CellEditEnding" Height="153" VerticalAlignment="Top">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=F2}" Width="*" IsReadOnly="True" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quant}" Width="*" IsReadOnly="False" />
            </DataGrid.Columns>

        </DataGrid>
        <Label Content="Cost: " HorizontalAlignment="Left" Margin="315,399,0,9"/>
        <Label x:Name="lblTotal" Content="$0" HorizontalAlignment="Left" Margin="356,399,0,0" VerticalAlignment="Top"/>
        <Label Content="Tax:" HorizontalAlignment="Left" Margin="170,399,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTax" Content="$0" HorizontalAlignment="Left" Margin="204,399,0,0" VerticalAlignment="Top"/>
        <Label Content="Total:" HorizontalAlignment="Left" Margin="427,399,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTotalTax" Content="$0" HorizontalAlignment="Left" Margin="470,399,0,0" VerticalAlignment="Top"/>
        <StatusBar Grid.ColumnSpan="2" Margin="0,0,10,435">
            <TextBlock Text="Pierce Pokorny" Grid.Column="1"/>
            <Image Height="22" Width="208" MouseLeftButtonDown="logo_Click" Source="/cenLogo.png"/>

        </StatusBar>
        <Button Content="User Control" HorizontalAlignment="Left" Margin="263,145,0,0" VerticalAlignment="Top" Click="Button_Click"/>
       

    </Grid>
</Window>
